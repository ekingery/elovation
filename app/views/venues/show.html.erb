<div class="hero-unit">
  <h1><%= @venue.name %></h1>

  <div class="description"><%= @venue.description %></div>
  <section class="action-buttons">
  <span><%= link_to 'Edit Venue', edit_venue_path(@venue), :class => "btn btn-primary" %></span>
  <% if @venue.players.empty? %>
    <span><%= link_to "Delete", venue_path(@venue), :method => :delete, :confirm => "Are you sure?", :class => "btn btn-danger" %></span>
  <% end %>
  </section>
</div>
<div class="row-fluid">
  <div class="span6">
    <h2>Players at this Venue</h2>
    <ul>
      <%= render :partial => 'players', :collection => @venue.all_players %>
    </ul>
  </div>
</div>

